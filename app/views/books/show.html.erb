<div class='container px-5 px-sm-0'>
  <% if @newcomment.errors.any? %>
      <h3 class="alert-list"><%= @newcomment.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @newcomment.errors.full_messages.each do |message| %>
        <li class="alert-list"><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class='row'>
    <div class="col-md-3">
      <%= render 'homes/userinfo', user: @book.user %>
      <%= render 'homes/newbook', newbook: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image ,:fill, 40, 40, format:'jpg', fallback:"no_image.jpg", size:"40x40" %>
              <% end %>
              <br>
              <%=link_to @book.user.name, user_path(@book.user.id) %>
            </td>
            <td width><%=link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% @favorites_for_book = @favorites.where(book_id: @book.id) %>
              <% @favorite_for_book_from_current_user = @favorites_for_book.where(user_id: current_user.id) %>
              <% if @favorite_for_book_from_current_user.empty? %>
                <%= link_to favorites_path(book_id: @book.id, from: "book_detail"), method: :post do %>
                  <div><i class="far fa-heart"></i> <%= @favorites_for_book.count %></div>
                <% end %>
              <% else %>
                <%= link_to favorite_path(@favorite_for_book_from_current_user.ids, from: "book_detail"), method: :delete do %>
                  <div><i class="fas fa-heart"></i> <%= @favorites_for_book.count %></div>
                <% end %>
              <% end %>
            </td>

            <% if @book.user.id == current_user.id %>
              <td><%=link_to "Edit", edit_book_path(@book.id) ,class: "btn btn-sm btn-success" %></td>
              <td><%=link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger", data: { confirm: "本当に消しますか？"} %></td>
            <% end %>

          </tr>
      </table>
      <% @comments_for_book = @comment.where(book_id: @book.id) %>

      <% @comments_for_book.each do |comment| %>
        <%= link_to user_path(comment.user.id) do %>
          <%= attachment_image_tag comment.user, :profile_image ,:fill, 40, 40, format:'jpg', fallback:"no_image.jpg", size:"40x40" %>
        <% end %>
        <%= comment.comment %>
        <% if comment.user.id == current_user.id%>
          <%=link_to "Destroy", book_comment_path(comment.id), method: :delete, class:"btn btn-sm btn-danger"%>
        <% end %>
        <br>
        <%=link_to comment.user.name, user_path(comment.user.id) %>
        <br>
      <% end %>
      <%= form_with model: @newcomment, url:'/book_comments', local:true do |f| %>
        <%= f.text_area :comment, class: "form-control comment"%>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :book_id, :value => @book.id %>
        <div><%= f.submit '送信'%></div>
      <% end %>

    </div>
  </div>
</div>